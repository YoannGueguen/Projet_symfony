{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ projet.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ projet.statut }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{% if projet.datedebut %}{{ projet.datedebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{% if projet.datefin %}{{ projet.datefin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        <!--<tr>
            <th>Discussion</th>
            <td>{##} projet.getDiscuId() }}</td>
        </tr>-->
        </tbody>
    </table>

    <ul style="list-style-type: none">
        <li>
            <a href="{{ path('index') }}">
                <button type="button" class="btn btn-primary">Retour Ã  l'accueil</button>
            </a>
        </li>
        <li>
            <a href="{{ path('projet_edit', { 'id': projet.id }) }}">
                <button type="button" class="btn btn-warning">Modifier le projet</button>
            </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer le projet" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
