{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fond</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ fond.titre }}</td>
            </tr>
        </tbody>
    </table>

    <ul style="list-style-type: none">
        <li>
            <a href="{{ path('fond_index') }}">
                <button type="button" class="btn btn-primary">Retour aux fonds</button>
            </a>
        </li>
        <li>
            <a href="{{ path('fond_edit', { 'id': fond.id }) }}">
                <button type="button" class="btn btn-warning">Modifier</button>
            </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
