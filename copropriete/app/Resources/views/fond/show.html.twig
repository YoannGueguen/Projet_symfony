{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fond</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ fond.titre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fond_index') }}">Retour aux fonds</a>
        </li>
        <li>
            <a href="{{ path('fond_edit', { 'id': fond.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
