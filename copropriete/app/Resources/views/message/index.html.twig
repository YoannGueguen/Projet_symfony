{% extends 'base.html.twig' %}

{% block body %}
    <h1>Messages list</h1>

    <table class="table table_list">
        <thead>
            <tr>
                <th>Contenu</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td><a href="{{ path('message_show', { 'id': message.id }) }}">{{ message.contenu }}</a></td>
                <td>{% if message.date %}{{ message.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul style="list-style-type: none">
                        <li>
                            <a href="{{ path('message_show', { 'id': message.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('message_edit', { 'id': message.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('message_delete', { 'id': message.id }) }}">delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('message_new') }}">
                <button type="button" class="btn btn-primary">CrÃ©er un nouveau message</button>
            </a>
        </li>
    </ul>
{% endblock %}
