{% extends 'base.html.twig' %}

{% block body %}
    <h1>Charge</h1>
    <table>
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ charge.titre }}</td>
            </tr>
            <tr>
                <th>Date_echeance</th>
                <td>{% if charge.dateecheance %}{{ charge.dateecheance|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ charge.montant }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ charge.statut }}</td>
            </tr>
            <tr>
                <th>Fichiers</th>
                <td><a href="../../../web/file/{{ charge.pjid }}">{{ charge.pjid }}</a></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('index') }}">Retour accueil</a>
        </li>
        {% if is_granted('ROLE_MANAGER') %}
        <li>
            <a href="{{ path('charge_edit', { 'id': charge.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer charge">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
