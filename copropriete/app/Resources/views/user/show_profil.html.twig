{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <th>E-mail</th>
        </tr>
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
        </tr>
        </tbody>
    </table>

    <ul style="list-style-type: none">
        <li>
            <a href="{{ path('user_edit', { 'id': user.id }) }}">Modifier</a>
        </li>
    </ul>
{% endblock %}
