{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>
    <div style="height:400px;overflow-y: ">
    <table class="table table_list">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>E-mail</th>
                <th>Roles</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.username }}</a>
                </td>
                <td>{{ user.email }}</td>
                <td>{% for role in user.roles %}
                        {{ role }},
                    {% endfor %}</td>
                <td><a href="{{ path('user_edit', { 'id': user.id }) }}">modifier</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <br><br>
    <ul style="list-style-type: none">
        <li>
            <a href="{{ path('user_new') }}">
                <button type="button" class="btn btn-primary">Nouvel utilisateur</button>
            </a>
        </li>
    </ul>
{% endblock %}
