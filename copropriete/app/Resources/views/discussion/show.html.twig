{% extends 'base.html.twig' %}

{% block body %}
    <h1>Discussion {{ discussion.nom }}</h1>
    <div>Date de création : {% if discussion.datedebut %}{{ discussion.datedebut|date('Y-m-d H:i:s') }}{% endif %}</div>
    <table>
        <tbody>
            <!--<tr>
                <th>Id</th>
                <td>{{ discussion.id }}</td>
            </tr>-->
            {% for message in messages %}
            <tr>
                <td>{{ message.contenu }}</td>
                <td></td>
                {% if is_granted('ROLE_MANAGER') %}
                <td>
                    <li>
                        <a href="{{ path('message_edit', { 'id': message.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('message_delete', { 'id': message.id }) }}">delete</a>
                    </li>
                </td>
                {% endif %}
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li><a href="{{ path('message_new') }}">Créer un nouveau message</a></li>
        <li>
            <a href="{{ path('discussion_index') }}">Retour aux discussions</a>
        </li>
        <li>
            <a href="{{ path('discussion_edit', { 'id': discussion.id }) }}">Modifier discussion</a>
        </li>
        {% if is_granted('ROLE_MANAGER') %}
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer discussion">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
