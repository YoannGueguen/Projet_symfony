{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}

{% block body %}
{% block fos_user_content %}
<div class="row">
    <div class="container">
        <div class="card ">
            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" class="btn btn-lg btn-primary btn-block btn-signin" value="{{ 'resetting.reset.submit'|trans }}" />
            </div>
            {{ form_end(form) }}
{% endblock fos_user_content %}
            {% endblock body %}
        </div>
    </div>
</div>